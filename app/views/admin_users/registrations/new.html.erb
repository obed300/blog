<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admin_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true,placeholder: 'email', autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password,placeholder: 'Password characters minimum', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,placeholder: 'Password comfirmation', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "admin_users/shared/links" %>
