<%= form_with model: @current_user, url: user_posts_path, method: :post, local: true, scope: :post do |form| %>
    <div class="post_form">
      <h3>Add New Post</h3>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title, class: 'post_title' %>
        <%if form&.object&.errors%>
          <% form.object.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <br>
      <div>
        <%= form.label :text %><br>
        <%= form.text_area :text, class: 'post_text' %>
        <%if form&.object&.errors%>
          <% form.object.errors.full_messages_for(:text).each do |message| %>
          <div><%= message %></div>
          <% end %>
        <% end %>
      </div>
      <br>
      <%= form.submit "Create Post", class: "post_button" %>
    </div>
  <% end %>